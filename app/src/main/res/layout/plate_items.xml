<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imgPlate"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:layout_marginTop="153dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtName"
            android:text="Plate name"
            android:textSize="17sp"
            android:textColor="#f24e86"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="203dp"/>

    <TextView
            android:text="Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCaption"
            android:textSize="17sp"
            android:textColor="#f24e86"
            android:textAlignment="center"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="168dp"/>
</RelativeLayout>