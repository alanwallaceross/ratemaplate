<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin" android:background="@color/ratemyplatebackground">
    <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Name"
            android:layout_alignParentBottom="true" android:layout_marginBottom="244dp"
            android:layout_centerHorizontal="true"/>

    <EditText
            android:id="@+id/edtCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Caption"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="178dp" android:layout_alignStart="@+id/edtName"/>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="29dp" android:layout_marginStart="19dp"/>

    <Button
            android:id="@+id/btnChoose"
            android:text="Choose image"
            android:layout_width="126dp"
            android:layout_height="57dp"
            android:layout_toEndOf="@+id/btnAdd"
            style="@style/Widget.AppCompat.Button.Colored" android:layout_alignBottom="@+id/imageView"
            android:layout_marginStart="0dp" android:background="@color/ratemyplatepink"/>

    <Button
            android:id="@+id/btnAdd"
            android:text="Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="66dp" android:background="#02b4ff"/>

    <Button
            android:text="Take photo"
            android:layout_width="126dp"
            android:layout_height="58dp"
            android:id="@+id/button" android:layout_alignEnd="@+id/btnChoose" android:layout_alignTop="@+id/imageView"
            android:background="#f24e86" style="@style/Widget.AppCompat.Button.Colored"/>
</RelativeLayout>